<%- include layouts/header.ejs %>

        <div class="page-data">
            <form method="post" action="/companies/edit/<%=company._id%>">
                <table cellpadding="11">
                <tr>
                    <td class="label">Client Name</td><td>: <input type="text" name="name" value="<%=company.company_name%>" required></td>
                 </tr>
                 <tr>
                    <td class="label" valign="top">Address</td>
                    <td valign="top">: 
                        <textarea name="address" required cols="30" rows="5"><%=company.address%></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="label">Email</td><td>: <input type="text" value="<%=company.email%>" name="email" required></td>
                 </tr>
                  <tr>
                    <td class="label">Phone</td><td>: <input type="text" name="phone" value="<%=company.phone%>" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
